<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="272.0" prefWidth="457.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainSceneBuilderController">

   <!-- Prima scena: Inserisci nome della tabella -->
   <StackPane fx:id="tableNameSection">
      <Label layoutX="179.0" layoutY="77.0" text="Nome della tabella:" />
      <TextField fx:id="tableNameField" layoutX="156.0" layoutY="103.0" />
      <Button layoutX="197.0" layoutY="142.0" onAction="#onTableNameConfirm" text="Conferma" />
   </StackPane>

   <!-- Seconda scena: Seleziona l'opzione per il dendrogramma -->
   <StackPane fx:id="dendrogramSelectionSection" visible="false">
      <Label layoutX="178.0" layoutY="89.0" text="Scegli un'operazione:" />
      <Button layoutX="123.0" layoutY="123.0" onAction="#onLoadDendrogramFromFile" prefHeight="25.0" prefWidth="221.0" text="Carica Dendrogramma da File" />
      <Button layoutX="123.0" layoutY="153.0" onAction="#onLearnDendrogramFromDB" text="Apprendi Dendrogramma da Database" />
   </StackPane>

   <!-- Terza scena: Inserisci numero per l'opzione scelta -->
   <StackPane fx:id="inputNumberSection" visible="false">
      <Label layoutX="169.0" layoutY="81.0" prefHeight="17.0" prefWidth="93.0" text="Inserisci numero:" />
      <TextField fx:id="inputNumberField" layoutX="141.0" layoutY="110.0" />
      <Button layoutX="182.0" layoutY="140.0" onAction="#onConfirmNumber" text="Conferma" />
   </StackPane>

</AnchorPane>
